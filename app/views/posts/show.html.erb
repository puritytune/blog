<h1><%= @post.title %></h1>
<div class="trix-content"><%= @post.content %></div>
<% if logged_in? %>
<ul class="list-unstyled list-inline">
  <li class="list-inline-item"><%= link_to "수정", edit_post_path(@post) ,:class=>"btn btn-primary"%></li>
  <li class="list-inline-item"><%= link_to "삭제", post_path(@post), data:{
    turbo_method: :delete,
    turbo_confirm: "삭제하시겠습니까?"
}, :class=>"btn btn-danger"%>
  </li>
</ul>
  
<% end %>

<h2>댓글</h2>
<%= render @post.comments %>

<h2>댓글 달기</h2>
<%= render 'comments/form' %>
