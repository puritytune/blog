<h1><%= @post.title %></h1>

<div><%= @post.content %></div>

<ul>
<li><%= link_to "수정", edit_post_path(@post) %></li>
<li><%= link_to "삭제", post_path(@post), data:{
    turbo_method: :delete,
    turbo_confirm: "삭제하시겠습니까?"
}%>
</li>
</ul>

<h2>댓글</h2>
<% @post.comments.each do |comment| %>
<div>
<p>
<strong>이름:</strong>
<%= comment.name %>
</p>
<p>
<strong>내용:</strong>
<%= comment.content %>
</p>
<p>
<%= link_to "삭제", [comment.post, comment], data: {
    turbo_method: :delete,
    turbo_confirm: "삭제 하시겠습니까?"
} %>
</p>

</div>

<% end %>

<h2>댓글 달기</h2>
<%= form_with model: [ @post, @post.comments.build ] do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :content %><br>
    <%= form.text_area :content %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>